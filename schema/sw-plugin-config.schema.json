{
  "title": "PluginModel",
  "type": "object",
  "properties": {
    "version": {
      "title": "Version",
      "description": "version of the plugin (e.g. 1.0)",
      "type": "string"
    },
    "name": {
      "title": "Name",
      "description": "name of the plugin (e.g. BERT-model)",
      "pattern": "^[- _a-zA-Z0-9{}]+$",
      "type": "string"
    },
    "metadata": {
      "title": "Metadata",
      "description": "extra information that will be provided to the image as environment variables and also to the user using that plugin (e.g. author name, source code, paper url)",
      "default": {},
      "type": "object",
      "patternProperties": {
        "^[_a-zA-Z]+$": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "version",
    "name"
  ],
  "additionalProperties": false
}