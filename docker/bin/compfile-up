#!/bin/sh

CURRPATH="$(dirname $0)"
DOCKERPATH=$CURRPATH/..

cd $DOCKERPATH

docker-compose up -d
if [ $? != 0 ]
then
    echo "please start docker service"
    systemctl start docker
    if [ $? == 0 ]
    then
        docker-compose up -d
        echo "application started"
    else
        echo "unknown problem occurred"
        exit 1
    fi
else
    echo "application started"
fi
exit 0
